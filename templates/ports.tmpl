{{- range .}}
<i>Port: </i><b>{{ .Port }}{{ .Type }} </b>
{{ if not .State -}}
    🌑[PORT OFF]
{{- else }}
    {{- if eq .Speed "Auto" -}}
        🌕[PORT ON]
    {{- else -}}
        ⚠️[PORT ON]
    {{- end }}
{{- end }} <code>{{ .Speed }}</code>
{{ if .Link }}🌎[LINK UP] {{ else }}📵[LINK DOWN] {{ end -}}
<code>{{ .Status }}</code>
{{- if .Cable }}
{{- range .Cable }}
<code>Pair {{ .Pair }} {{ .State }}
{{- if ne .Len 666 }} {{ .Len }} M{{ end }}</code>
{{- end -}}
{{- end }}
{{- if .Description }}
<i>Description: </i><code>{{ .Description }}</code>{{ end }}
{{- if not .Learning }}
<i>MAC learning: </i><code>disabled</code>‼️{{ end }}
{{- if .Autodowngrade }}
<i>Autodowngrade: </i><code>enabled</code>{{ end }}
{{- end }}
