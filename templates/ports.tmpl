{{- $UP := "\xF0\x9F\x86\x99" }}
{{- $WARN := "\xE2\x80\xBC" }}
{{- $disabled := "\xF0\x9F\x8C\x91" }}
{{- $enabled := "\xF0\x9F\x8C\x95" }}
{{- $warning := "\xE2\x9A\xA0" }}
{{- $linkUp := "\xF0\x9F\x8C\x8E" }}
{{- $linkDown := "\xF0\x9F\x93\xB5" }}
{{- $link10 := "\xF0\x9F\x8C\x90" }}
{{- range .}}
<i>Port: </i><b>{{ .Port }}{{ .Type }}</b>
{{- if not .State }}
    {{- $disabled }}
{{- else }}
    {{- if eq .Speed "Auto" }}
        {{- $enabled }}
    {{- else }}
        {{- $warning }}
    {{- end }}
{{- end -}}
<code>{{ .Speed }}</code>
<i>Link: </i>
{{- if .Link }}{{ $linkUp }}{{ else }}{{ $linkDown }}{{ end -}}
<code>{{ .Status }}</code>
{{- if .Cable }}
{{- range .Cable }}
<code>Pair {{ .Pair }} {{ .State }}
{{- if ne .Len 666 }} {{ .Len }} M{{ end }}</code>
{{- end -}}
{{- end }}
{{- if .Description }}
<i>Description: </i><code>{{ .Description }}</code>{{ end }}
{{- if not .Learning }}
<i>MAC learning: </i><code>disabled</code>{{ $WARN }}{{ end }}
{{- if .Autodowngrade }}
<i>Autodowngrade: </i><code>enabled</code>{{ end }}
{{- end }}
